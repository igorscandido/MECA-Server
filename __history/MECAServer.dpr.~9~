program MECAServer;

{$APPTYPE CONSOLE}

{$R *.res}

uses
  System.SysUtils,
  Horse,
  Provider.Connection in 'Providers\Provider.Connection.pas' {DBConnection: TDataModule};

var
  DBConnection : TDBConnection;

begin

  DBConnection := TDBConnection.Create(0);

  THorse.Get('/ping',
  procedure(Req : THorseRequest; Res : THorseResponse; Next: TProc)
  begin
    Res.Send('Olá!');
  end);

  THorse.Listen(9000);
end.
